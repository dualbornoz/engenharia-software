
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Professor {
  id            Int          @id @default(autoincrement())
  nome          String
  email         String       @unique
  disciplinas   Disciplina[] 
}

model Disciplina {
  id            Int          @id @default(autoincrement())
  nome          String
  professorId   Int
  alunoId       Int
  professor     Professor    @relation(fields: [professorId], references: [id])
  aluno         Aluno        @relation(fields: [alunoId], references: [id])
}

model Aluno {
  id            Int          @id @default(autoincrement())
  nome          String
  email         String       @unique
  disciplinas   Disciplina[] 
}


